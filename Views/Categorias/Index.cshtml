@model IEnumerable<PortasAbertasUNINASSAU.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Incluir Nova Categoria", "Create", "Categoria", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CategoriaId)</th>
        <th>@Html.DisplayNameFor(model => model.CategoriaNome) </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CategoriaId)</td>
            <td>@Html.DisplayFor(modelItem => item.CategoriaNome)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.CategoriaId })
            </td>
        </tr>
    }
</table>